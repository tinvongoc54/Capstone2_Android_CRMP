<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/crime_category"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/textViewCategory"
                />
            <TextView
                android:id="@+id/textViewArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCategory"
                android:layout_marginTop="10dp"
                android:text="@string/area_title"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCategory"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textViewArea"
                >
                <RadioButton
                    android:id="@+id/radioPresentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/present_location"
                    android:textColor="#FFFFFF"
                    />
                <RadioButton
                    android:id="@+id/radioSelectLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_location"
                    android:textColor="#FFFFFF"
                    />
            </RadioGroup>
            <Spinner
                android:id="@+id/spinnerArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio"
                android:layout_marginStart="90dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerArea"
                android:layout_marginTop="10dp"
                android:text="@string/title_report"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerArea"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/textViewTitle"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitle"
                android:layout_marginTop="10dp"
                android:text="@string/content"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/textViewDescription"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="#ffffff"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/textViewImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextDescription"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="7dp"
                android:text="@string/images"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/buttonSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/editTextDescription"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textViewImage"
                android:background="@drawable/custom_button"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="@string/choose_image"
                android:textColor="@drawable/custom_text_color"
                />
            <ImageView
                android:id="@+id/imageViewCrime"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_below="@+id/buttonSelectImage"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                />
            <Button
                android:id="@+id/buttonPost"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/imageViewCrime"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button"
                android:text="@string/post"
                android:textColor="@drawable/custom_text_color"
                />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
